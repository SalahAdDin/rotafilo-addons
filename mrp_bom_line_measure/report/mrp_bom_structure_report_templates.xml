<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mrp_bom_inherit_structure_report" inherit_id="mrp.mrp_bom_structure_report">
            <xpath expr="//table[@class='table table-condensed']//thead//tr" position="replace">
                <tr>
                    <th>Name</th>
                    <th>Measure</th>
                    <th>Quantity</th>
                    <th>Reference</th>
                </tr>
            </xpath>

            <xpath expr="//td[@style='padding-left: 20px;']" position="after">
                <td>
                    <span t-esc="l['p_measure']"/>
                    <span t-esc="l['measure_uom_name']" groups="product.group_uom"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>
